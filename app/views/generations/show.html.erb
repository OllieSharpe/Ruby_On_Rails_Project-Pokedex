<p id="notice"><%= notice %></p>

<h3>
  <strong>Region:</strong>
  <%= @generation.region %>
</h3>

<h1 class="pokemon-title">Pokemon</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Main Type</th>
      <th>Secondary Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><img src="<%= pokemon.sprite %>" alt="<%= pokemon.name %>"></td>
        <td><%= pokemon.name.capitalize %></td>
        <td><%= pokemon.type1.capitalize %></td>
        <% if (pokemon.type2) %>
          <td><%= pokemon.type2.capitalize %></td>
        <% else %>
          <td><%= pokemon.type2 %></td>
        <% end %>
        <td><%= link_to 'Show', pokemon %></td>
        <% if (current_user && current_user.admin) %>
          <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
          <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="link">
  <% if (current_user && current_user.admin) %>
    <%= link_to 'Edit', edit_generation_path(@generation) %>
  <% end %>
  <%= link_to 'Back', generations_path %>
</p>
