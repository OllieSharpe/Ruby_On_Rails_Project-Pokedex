<p id="notice"><%= notice %></p>

<h1>Generations</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th></th>
      <th>Games</th>
      <th>Region</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @generations.each do |generation| %>
      <tr>
        <td><%= generation.id %></td>
        <td><%= generation.games %></td>
        <td><%= generation.region %></td>
        <td><%= generation.user_id %></td>
        <td><%= link_to 'Show', generation %></td>
        <% if (current_user && current_user.admin) %>
          <td><%= link_to 'Edit', edit_generation_path(generation) %></td>
          <td><%= link_to 'Destroy', generation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if (current_user && current_user.admin) %>
  <p class="link"><%= link_to 'New Generation', new_generation_path %></p> <br>
<% end %>

<p class="link"><%= link_to 'View All Pokemon', pokemons_path %></p>
